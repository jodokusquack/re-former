<%= form_for @user do |f| %>
  <%= f.label :username, 'Your Username Here:' %><br>
  <%= f.text_field :username %><br>
  <%= f.label :email %><br>
  <%= f.text_field :email, placeholder: "me@example.com" %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password %><br>
  <%= f.submit @user.persisted? ? 'Update Me' : 'Create Me' %>
<% end %>
